<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <style>
            .live-data{
      display: flex;
      gap: 15px;
      align-items: center;
      padding: 10px;
    }
    </style>
</head>
<body>

    <%- include('partials/navbar') %>

    

    <section class="jumbotron">
        <div class="container">
          <h1 class="">Computer Networks</h1>
          <p class="lead">Section: <%= sectionName %></p>
        </div>
      </section>


      <div class="container">
        <table class="table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Time</th>
                <th>View Attendance</th>
                <th>Download Excel</th>
              </tr> 
            </thead>
            
            <tbody>
              
              <% for(let i=0; i<attendanceList.length; i++) { %>
              <tr>
                <td><%= attendanceList[i].date %></td>
                <td><%= attendanceList[i].time %></td>
                <td>
                  <a href="/viewAttendance/<%= sectionId %>/<%= i %>">
                  <button class="btn btn-primary btn-sm">
                     View Attendance   
                  </button>
                  </a>
                </td>
                <td>
                  <button class="btn btn-primary btn-sm">
                     Download Excel   
                  </button>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
      </div>
</body>
</html>